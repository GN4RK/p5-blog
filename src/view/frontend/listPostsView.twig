<header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">
        <h1>Blog</h1>
        <h2>Derniers billets du blog :</h2>
    </div>
</header>

<section class="page-section row justify-content-center" id="postsList">
    <div class="col-sm-7 col-md-7 col-lg-6 col-xl-5">
        {% for item in posts %}
            {% if not loop.first %}
                <!-- Icon Divider-->
                <div class="divider-custom">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                    <div class="divider-custom-line"></div>
                </div>
            {% endif %}

            <div class="container border pt-4" role="button" onclick="window.location.href='./blog/{{ item.id }}'">
                <h3 class="text-center"> {{ item.title }} </h3>
                <p><em>le {{ item.publication_date_fr }}</em></p>
                <p> {{ item.header }}... </p>
                <p><em><a href="./blog/{{ item.id }}">Commentaires</a></em></p>
            </div>
        {% endfor %}
    </div>
</section>
